<div class="container-fluid">
  <div class="row py-3 justify-content-center border">
    <div class="col-6">
      <div class="row mb-3 justify-content-center">
        <h3><%= job.persisted? ? "Edit Job" : "Create Job"%></h3>
      </div>
      <div class="">
        <%= form_with(model: job, local: true, html: { class: "needs-validation"}) do |form| %>
          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :company, class: "form-label" %>
            <%= form.text_field :company, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :location, class: "form-label" %>
            <%= form.text_field :location, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 3, style: "resize: both" %>
          </div>
          <div class="mb-3 justify-content-center">
            <%= form.submit job.persisted? ? "Update" : "Create", class: "btn btn-primary" %>
            <%= link_to("Cancel", root_path, class: "btn btn-link text-decoration-none", data: { confirm: "Are you sure you want to cancel?" }) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
